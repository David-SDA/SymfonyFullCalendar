{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block stylesheets %}
    <style>
        #calendar{
            width: 80%;
            margin: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Calendar</h1>
    
    <div id="calendar"></div>
{% endblock %}

{% block javascripts %}
    {# Permet d'inclure le javascript du template parent (de base.html.twig) dans le cas o√π en a besoin sur toute les pages #}
    {{ parent() }}

    {# Ajout de Full Calendar #}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.js" integrity="sha256-alsi6DkexWIdeVDEct5s7cnqsWgOqsh2ihuIZbU6H3I=" crossorigin="anonymous"></script>

    {# Affichage d'un calendrier #}
    <script>
        window.onload = () => {
            let calendarElt = document.querySelector("#calendar");

            let calendar = new FullCalendar.Calendar(calendarElt, {
                initialView: 'dayGridMonth'
            });
            
            calendar.render();
        };
    </script>
{% endblock  %}