{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block stylesheets %}
    <style>
        #calendar{
            width: 80%;
            margin: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Calendar</h1>
    
    <div id="calendar"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
        window.onload = () => {
            let calendarElt = document.querySelector("#calendar");

            let calendar = new FullCalendar.Calendar(calendarElt, {
                initialView: 'dayGridMonth'
            });
            
            calendar.render();
        };
    </script>
{% endblock  %}